{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "types": [
            "vitest/globals"
        ],
        "rootDir": ".",
        "outDir": "dist"
    },
    "include": [
        "tests/**/*",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist"
    ]
}