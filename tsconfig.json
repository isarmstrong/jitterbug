{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@isarmstrong/jitterbug": [
        "./src"
      ],
      "@isarmstrong/jitterbug/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".coverage",
    "examples"
  ],
  "references": [
    {
      "path": "./src"
    }
  ]
}