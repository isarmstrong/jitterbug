{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "paths": {
      "@isarmstrong/jitterbug-core-types": [
        "packages/core-types/src"
      ],
      "@isarmstrong/jitterbug-core-types/*": [
        "packages/core-types/src/*"
      ],
      "@isarmstrong/jitterbug-types": [
        "packages/jitterbug-types/src"
      ],
      "@isarmstrong/jitterbug-types/*": [
        "packages/jitterbug-types/src/*"
      ],
      "@isarmstrong/jitterbug": [
        "src"
      ],
      "@isarmstrong/jitterbug/*": [
        "src/*"
      ],
      "@isarmstrong/jitterbug-next/api": [
        "packages/jitterbug-next/src/api/index"
      ],
      "@isarmstrong/jitterbug-next/api/*": [
        "packages/jitterbug-next/src/api/*"
      ]
    }
  },
  "references": [
    {
      "path": "./packages/core-types"
    },
    {
      "path": "./packages/jitterbug-types"
    },
    {
      "path": "./packages/jitterbug-next"
    },
    {
      "path": "./src"
    }
  ],
  "include": [
    "src/**/*",
    "packages/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}