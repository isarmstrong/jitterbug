{
    "name": "@isarmstrong/jitterbug",
    "version": "0.1.4a",
    "type": "module",
    "main": "./dist/src/index.js",
    "module": "./dist/src/index.js",
    "types": "./dist/src/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "import": "./dist/src/index.js",
            "require": "./dist/src/index.js",
            "default": "./dist/src/index.js"
        },
        "./transports/*": {
            "types": "./dist/src/transports/*.d.ts",
            "import": "./dist/src/transports/*.js",
            "require": "./dist/src/transports/*.js",
            "default": "./dist/src/transports/*.js"
        },
        "./processors/*": {
            "types": "./dist/src/processors/*.d.ts",
            "import": "./dist/src/processors/*.js",
            "require": "./dist/src/processors/*.js",
            "default": "./dist/src/processors/*.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "pnpm clean && tsc",
        "dev": "tsc --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint . --ext .ts,.js,.jsx --fix",
        "lint:strict": "eslint . --ext .ts,.js,.jsx --max-warnings=0",
        "lint:react": "eslint --config .eslintrc.test.cjs 'src/transports/**/*.{ts,tsx}' --max-warnings 0",
        "lint:core": "eslint --config .eslintrc.test.cjs 'src/core.ts' --max-warnings 0",
        "lint:all": "pnpm lint:core && pnpm lint:react",
        "format": "prettier --write \"**/*.{ts,js,json,md}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist",
        "prepublishOnly": "pnpm build"
    },
    "optionalDependencies": {
        "next": "^14.0.0",
        "react": "^18.2.0"
    },
    "dependencies": {
        "p-queue": "^7.4.1",
        "p-throttle": "^5.1.0",
        "react-dom": "18.2.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.0",
        "@types/react-dom": "18.2.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "eslint-import-resolver-typescript": "^3.7.0",
        "eslint-plugin-react": "^7.37.4",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "typescript": "~5.3.3",
        "vitest": "^1.1.0"
    },
    "engines": {
        "node": ">=18.17.0"
    },
    "publishConfig": {
        "access": "public"
    }
}