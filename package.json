{
    "name": "@isarmstrong/jitterbug",
    "version": "0.2.0",
    "description": "Edge-first debugging system for Next.js with orchestrated logging",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rm -rf dist",
        "dev": "tsc --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "cd e2e && playwright test --reporter=line",
        "test:e2e:install": "playwright install chromium firefox",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "check-barrel": "node scripts/check-barrel-exports.js",
        "digest": "npx tsx scripts/digest/generate-digest.ts",
        "domain-snapshot": "npx tsx scripts/digest/generate-domain-snapshot.ts",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "edge",
        "debugging",
        "next.js",
        "logging",
        "sse",
        "orchestrator"
    ],
    "author": "Ian Armstrong",
    "license": "MIT",
    "peerDependencies": {
        "next": ">=14.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^20.11.5",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vitest/coverage-v8": "^1.2.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "express": "^4.18.2",
        "fast-check": "^4.2.0",
        "http-server": "^14.1.1",
        "jsdom": "^26.1.0",
        "next": "^14.0.0",
        "prettier": "^3.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "vitest": "^1.6.1"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}