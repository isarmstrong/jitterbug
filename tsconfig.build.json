{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "noEmit": false,
        "moduleResolution": "node",
        "module": "esnext"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "__tests__",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}