{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "vitest/globals",
            "node"
        ],
        "isolatedModules": false,
        "allowJs": true,
        "noEmit": true,
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@jitterbug": [
                "packages/jitterbug/src"
            ],
            "@jitterbug/*": [
                "packages/jitterbug/src/*"
            ],
            "@jitterbug-next": [
                "packages/jitterbug-next/src"
            ],
            "@jitterbug-next/*": [
                "packages/jitterbug-next/src/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@transports/*": [
                "src/transports/*"
            ],
            "@ebl/*": [
                "src/types/ebl/*"
            ],
            "@core-types/*": [
                "src/types/*"
            ],
            "@jitterbug-core/*": [
                "packages/jitterbug/src/*"
            ],
            "@dev/jitterbug": [
                "./src"
            ],
            "@dev/jitterbug/*": [
                "./src/*"
            ],
            "@dev/jitterbug-types": [
                "./packages/jitterbug-types/src"
            ]
        }
    },
    "include": [
        "src/**/*",
        "packages/jitterbug/src/**/*",
        "packages/jitterbug-next/src/**/*",
        "next-env.d.ts",
        "vitest.config.ts",
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx",
        "__tests__/**/*.js",
        "__tests__/**/*.jsx",
        "__tests__/integration/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}