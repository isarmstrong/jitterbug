{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "lib": [
            "esnext",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.test.ts",
        "**/*.spec.ts",
        "vitest.config.ts"
    ]
}