{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "../../",
        "outDir": "dist",
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "noEmit": false,
        "paths": {
            "@isarmstrong/jitterbug": [
                "../../src"
            ],
            "@isarmstrong/jitterbug/*": [
                "../../src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "api/**/*.ts",
        "api/**/*.tsx",
        "../../src/**/*.ts",
        "../../src/**/*.tsx",
        "global.d.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}