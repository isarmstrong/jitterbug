{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "../../",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@isarmstrong/jitterbug": [
                "../../src"
            ],
            "@isarmstrong/jitterbug/*": [
                "../../src/*"
            ],
            "@isarmstrong/jitterbug-types": [
                "../jitterbug-types/src"
            ],
            "@isarmstrong/jitterbug-types/*": [
                "../jitterbug-types/src/*"
            ],
            "@isarmstrong/jitterbug-core-types": [
                "../core-types/src"
            ],
            "@isarmstrong/jitterbug-core-types/*": [
                "../core-types/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../../src/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts"
    ],
    "references": [
        {
            "path": "../jitterbug-types"
        },
        {
            "path": "../core-types"
        }
    ]
}