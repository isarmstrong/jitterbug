{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../dist/jitterbug-next",
        "rootDir": "./src",
        "composite": true,
        "tsBuildInfoFile": "../../dist/jitterbug-next/.tsbuildinfo",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@isarmstrong/jitterbug": [
                "../../src"
            ],
            "@isarmstrong/jitterbug/*": [
                "../../src/*"
            ],
            "@isarmstrong/jitterbug-types": [
                "../jitterbug-types/src"
            ],
            "@isarmstrong/jitterbug-types/*": [
                "../jitterbug-types/src/*"
            ]
        }
    },
    "references": [
        {
            "path": "../../src"
        },
        {
            "path": "../jitterbug-types"
        }
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}