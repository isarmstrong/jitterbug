{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@isarmstrong/jitterbug": [
                "./src"
            ],
            "@isarmstrong/jitterbug/*": [
                "./src/*"
            ],
            "@isarmstrong/jitterbug-types": [
                "./packages/jitterbug-types/src"
            ],
            "@isarmstrong/jitterbug-types/*": [
                "./packages/jitterbug-types/src/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    }
}