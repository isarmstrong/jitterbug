{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "src/types/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@transports/*": [
                "src/transports/*"
            ],
            "@ebl/*": [
                "src/types/ebl/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    }
}