            "working": {
                "capacity": "active_projects",
                "retention": "project_duration",
                "priority": "task_completion"
            },
            "long_term": {
                "capacity": "unlimited",
                "retention": "permanent",
                "priority": "pattern_recognition"
            }
        }
    },
    "experiences": {
        "projects": [],
        "patterns": {
            "successful": [],
            "problematic": [],
            "innovative": []
        },
        "learnings": {
